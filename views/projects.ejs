<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Projects - Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: '/solutions/projects'}) %>

    <div class="container mx-auto p-4">
      <!-- Hero Section -->
      <div class="hero bg-base-200 mb-8">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold mb-4">Projects</h1>
            <p class="mb-4">View all projects or filter by sector:</p>
            <div class="flex justify-center gap-2">
              <a href="/solutions/projects?sector=industry" class="btn btn-primary">Industry</a>
              <a href="/solutions/projects?sector=electricity" class="btn btn-primary">Electricity</a>
              <a href="/solutions/projects?sector=transportation" class="btn btn-primary">Transportation</a>
              <a href="/solutions/projects" class="btn btn-outline">View All</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Projects Table -->
      <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
          <!-- Table Header -->
          <thead>
            <tr>
              <th class="px-4 py-2">Title</th>
              <th class="px-4 py-2">Sector</th>
              <th class="px-4 py-2">Summary</th>
              <th class="px-4 py-2">Actions</th>
            </tr>
          </thead>
          <!-- Table Body -->
          <tbody>
            <% if (projects && projects.length > 0) { %>
              <% projects.forEach(project => { %>
                <tr>
                  <td class="px-4 py-2"><%= project.title %></td>
                  <td class="px-4 py-2">
                    <a href="/solutions/projects?sector=<%= project.sector.toLowerCase() %>" 
                       class="btn btn-sm btn-outline">
                      <%= project.sector %>
                    </a>
                  </td>
                  <td class="px-4 py-2"><%= project.summary_short %></td>
                  <td class="px-4 py-2">
                    <a href="/solutions/projects/<%= project.id %>" 
                       class="btn btn-sm btn-primary">
                      details
                    </a>
                  </td>
                </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="4" class="text-center py-4">No projects found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
</body>
</html>