<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Project - Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: '/solutions/addProject'}) %>

    <div class="container mx-auto p-4">
        <!-- Hero Section -->
        <div class="hero bg-base-200 mb-8">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Add Project</h1>
                    <p>Create a new climate solution project</p>
                </div>
            </div>
        </div>

        <!-- Project Form -->
        <div class="card bg-base-100 shadow-xl">
            <div class="card-body">
                <form method="POST" action="/solutions/addProject">
                    <!-- Title -->
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Title</span>
                        </label>
                        <input type="text" name="title" class="input input-bordered" required />
                    </div>

                    <!-- Feature Image URL -->
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Feature Image URL</span>
                        </label>
                        <input type="url" name="feature_img_url" class="input input-bordered" required />
                    </div>

                    <!-- Sector -->
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Sector</span>
                        </label>
                        <select name="sector_id" class="select select-bordered" required>
                            <% sectors.forEach(sector => { %>
                                <option value="<%= sector.id %>"><%= sector.sector_name %></option>
                            <% }); %>
                        </select>
                    </div>

                    <!-- Introduction -->
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Introduction</span>
                        </label>
                        <textarea name="intro_short" class="textarea textarea-bordered h-24" required></textarea>
                    </div>

                    <!-- Summary -->
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Summary</span>
                        </label>
                        <textarea name="summary_short" class="textarea textarea-bordered h-24" required></textarea>
                    </div>

                    <!-- Impact -->
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Impact</span>
                        </label>
                        <textarea name="impact" class="textarea textarea-bordered h-24" required></textarea>
                    </div>

                    <!-- Original Source URL -->
                    <div class="form-control mb-4">
                        <label class="label">
                            <span class="label-text">Original Source URL</span>
                        </label>
                        <input type="url" name="original_source_url" class="input input-bordered" required />
                    </div>

                    <!-- Submit Button -->
                    <div class="form-control mt-6">
                        <button type="submit" class="btn btn-primary">Add Project</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>