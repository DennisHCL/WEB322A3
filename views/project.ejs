<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Details - Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <%- include('partials/navbar', {page: ''}) %>

    <div class="container mx-auto p-4">
        <!-- Project Title Section -->
        <div class="hero bg-base-200 mb-8">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold mb-4"><%= project.title %></h1>
                    <p>Below, you will find detailed information about the project: <%= project.title %></p>
                </div>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Left Side: Image and Quote -->
            <div>
                <!-- Project Image -->
                <div class="card bg-base-100 shadow-xl mb-8">
                    <figure>
                        <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="w-full">
                    </figure>
                </div>
                
                <!-- Quote Card -->
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title">Random Quote</h2>
                        <div id="quoteContainer">
                            <p id="quote" class="italic">Loading quote...</p>
                            <p id="author" class="text-right font-bold mt-2">- Loading author...</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side: Project Details -->
            <div class="space-y-6">
                <!-- Project Information -->
                <div class="prose max-w-none">
                    <!-- Introduction -->
                    <h2 class="text-2xl font-bold">Introduction</h2>
                    <p><%= project.intro_short %></p>

                    <!-- Impact -->
                    <h2 class="text-2xl font-bold mt-6">Impact</h2>
                    <p><%= project.impact %></p>

                    <!-- Source Link and Actions -->
                    <div class="mt-6">
                        <h2 class="text-2xl font-bold">Learn More</h2>
                        <div class="flex flex-wrap gap-4 mt-2">
                            <a href="<%= project.original_source_url %>" target="_blank" 
                               class="btn btn-primary">View Original Source</a>
                            <a href="/solutions/editProject/<%= project.id %>" 
                               class="btn btn-success">Edit Project</a>
                            <a href="#" onclick="history.back(); return false;" 
                               class="btn btn-outline">‚Üê Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script for Random Quote -->
    <script>
    document.addEventListener("DOMContentLoaded", () => {
        fetch('https://dummyjson.com/quotes/random')
            .then(res => res.json())
            .then(data => {
                document.getElementById('quote').textContent = `"${data.quote}"`;
                document.getElementById('author').textContent = `- ${data.author}`;
            })
            .catch(err => {
                document.getElementById('quote').textContent = "Failed to load quote";
                document.getElementById('author').textContent = "";
            });
    });
    </script>
</body>
</html>